/* Import a modern and clean font from Google Fonts */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap');

/* --- Variabili Globali per Colori e Stili (CSS Variables) --- */
/* Questo rende facile cambiare il tema in futuro! */
:root {
    --background-main: #F8F9FA; /* Sfondo principale, quasi bianco */
    --background-secondary: #FFFFFF; /* Sfondo per elementi come la toolbar e la lavagna */
    --text-primary: #1E293B; /* Colore testo principale, scuro ma non nero */
    --text-secondary: #64748B; /* Colore testo secondario, grigio */
    --border-color: #E2E8F0; /* Colore per i bordi, molto leggero */
    --accent-primary: #4F46E5; /* Colore primario (viola/blu), per selezione e bottoni */
    --accent-primary-hover: #4338CA; /* Versione più scura per hover */
    --accent-danger: #DC2626; /* Colore per azioni distruttive (es. logout, pulisci) */
    --accent-danger-hover: #B91C1C;
    --shadow-sm: 0 1px 2px 0 rgb(0 0 0 / 0.05);
    --shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
    --border-radius: 8px; /* Angoli arrotondati, più morbidi */
}

/* --- Stile Generale del Body --- */
body {
